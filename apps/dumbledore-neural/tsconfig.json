{
  "compilerOptions": {
    "baseUrl": "./src/",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "target": "es6",
    "downlevelIteration": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": [
      "es2017",
      "dom"
    ],
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}