{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/",
    "jsx": "react",
    "lib": [
      "es2017",
      "esnext.asynciterable",
      "dom"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": [
    "dist/**",
    "node_modules/**"
  ],
  "include": [
    "./src"
  ]
}